{
    "compilerOptions": {
      "target": "es2016",
  
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,         
      "forceConsistentCasingInFileNames": true,
      "resolvePackageJsonExports": true,
      "noResolve": false,
  
      "allowJs": true,
      "checkJs": true,
      
      "declaration": true,
      "emitDeclarationOnly": true,
      
      "strict": true,
      "noImplicitAny": true,
  
      "skipLibCheck": false,
      "skipDefaultLibCheck": true,                               
    },
  }
  